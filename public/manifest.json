{
  "manifest_version": 3,
  "name": "Augmented Tabflow",
  "version": "0.0.1",
  "description": "Augment your tab workflow with extended tab group managment",
  "permissions": [
    "sidePanel",
    "tabs",
    "tabGroups",
    "storage",
    "bookmarks",
    "favicon"
  ],
  "icons": {
    "16": "icons/icon-3-16.png",
    "32": "icons/icon-3-32.png",
    "48": "icons/icon-3-48.png",
    "128": "icons/icon-3-128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Augmented Tabflow"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
