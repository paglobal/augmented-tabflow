{
  "manifest_version": 3,
  "name": "Augmented Tabflow",
  "version": "0.0.1",
  "minimum_chrome_version": "116",
  "description": "Augment your tab workflow with extended tab group and session managment",
  "permissions": [
    "sidePanel",
    "tabs",
    "tabGroups",
    "storage",
    "unlimitedStorage",
    "bookmarks",
    "favicon"
  ],
  "icons": {
    "16": "assets/icons/icon-3-16.png",
    "32": "assets/icons/icon-3-32.png",
    "48": "assets/icons/icon-3-48.png",
    "128": "assets/icons/icon-3-128.png"
  },
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Augmented Tabflow"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": "Alt+T"
    }
  }
}
